<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XaDemo.Coupon" BackgroundColor = "Aqua">
	<ContentPage.Content>

		<StackLayout Padding = "0,40,0,0" x:Name = "coupon">

			
	   	 <Image x:Name="Restaurant_img"/>
		<Label x:Name = "cou1_name" TextColor = "Purple" FontSize = "30" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>
			<Label x:Name = "cou1_description" TextColor = "Red" FontSize = "35" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>
						<Label Text ="請於兌換完畢後按下確認" TextColor = "#EA25" FontSize = "18" Margin = "0,50,0,0" HorizontalOptions = "CenterAndExpand"/>

			<Button Text="顯示剩餘時間"
            TextColor="#EA25"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            FontSize="15"
			BackgroundColor = "Transparent"
            BorderColor="White"
            WidthRequest="130"
            HeightRequest="40"
            x:Name="timer"
                />

			
			<Button Text="確認"
            TextColor="#EA25"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            FontSize="15"
            BorderWidth="0"
            BorderColor="White"
            FontAttributes="None"
            BackgroundColor="White"
            BorderRadius="20"
            WidthRequest="200"
            HeightRequest="40"
            x:Name="confirm"
                />
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
