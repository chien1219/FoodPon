<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XaDemo.Coupon" BackgroundColor = "Aqua">
	<ContentPage.Content>

		<StackLayout Padding = "20" BackgroundColor = "#FFF4C1" x:Name = "coupon">

			
	   	 <Image x:Name="Restaurant_img"/>
		<Label x:Name = "cou1_name" TextColor = "Green" FontSize = "30" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>
			<Label x:Name = "cou1_description" TextColor = "Aqua" FontSize = "40" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>
						<Label Text ="請於兌換完畢後按下確認" TextColor = "Green" FontSize = "15" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>
			<Label x:Name = "timer" TextColor = "Fuchsia" FontSize = "15" VerticalOptions = "CenterAndExpand" HorizontalOptions = "CenterAndExpand"/>

			<Button Text="確認"
            TextColor="#EA25"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            FontSize="13"
            BorderWidth="0"
            BorderColor="White"
            FontAttributes="None"
            BackgroundColor="Aqua"
            BorderRadius="20"
            WidthRequest="200"
            HeightRequest="35"
            x:Name="confirm"
                />
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
