<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XaDemo.View.MainPage"
             
             Padding="10, 40, 10, 10"
             BackgroundColor="#CECEFF">


  <StackLayout>

    <Image x:Name="CoverImage"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
           WidthRequest="150"
           HeightRequest="150"/>


		 <Label Text="交點食代"
           VerticalOptions="CenterAndExpand"
           HorizontalTextAlignment="Center"
           FontSize="60"
           FontAttributes="None"
           TextColor="#9F35FF"
           AbsoluteLayout.LayoutBounds="30,25"/>
    <Label Text="Only for Cheaper Meal"
           VerticalOptions="CenterAndExpand"
           HorizontalTextAlignment="Center"
           FontSize="30"
           FontAttributes="Italic"
           TextColor="Aqua"
           AbsoluteLayout.LayoutBounds="30,25"/>

		   
          
    <Label x:Name = "date" FontSize = "15" TextColor = "Red" HorizontalOptions = "CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    <Button Text="Get Coupon!"
            TextColor="Black"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            FontSize="17"
            BorderWidth="3"
            BorderColor="White"
            FontAttributes="Bold"
            BackgroundColor="#EAD"
            BorderRadius="10"
            WidthRequest="150"
            HeightRequest="80"
            x:Name="FindBtn"
                />

  </StackLayout>

</ContentPage>