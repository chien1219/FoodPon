    <!--設定loading圈圈格式-->
    <ActivityIndicator Grid.RowSpan="2"
                    HorizontalOptions="Center"
                    Color="Red"
                    VerticalOptions="Center"
                    IsVisible="False"
                    IsEnabled="True"
                    x:Name="syncIndicator"/>
    </Grid>
</ContentPage>