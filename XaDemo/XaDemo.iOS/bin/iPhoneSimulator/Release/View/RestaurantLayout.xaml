<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#FFD9EC"
             x:Class="XaDemo.View.RestaurantLayout" >
  <Grid RowSpacing="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    
    <StackLayout Orientation="Vertical" Padding="20,10,0,0" x:Name="ResultData">
        <ScrollView  Orientation = "Vertical" VerticalOptions="StartAndExpand">
          <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
            <!--定義餐廳名稱，定義餐廳來源-->
            <!--<Image x:Name="Restaurant_img" Source="{Binding Image}"/>-->
          
            <!--設定"餐廳名稱"外觀格式-->
            <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" Margin="0,0,0,-10">
              <Image Source="assignment.png" />
              <Label Text="餐廳名稱" TextColor="#3D474A" FontSize="12"/>
            </StackLayout>
            <!--顯示餐廳名稱-->
            <Label Text="{Binding Name}" x:Name="Restaurant_name1" TextColor="#3D37ED" FontSize="16" Margin="0,0,0,0"/>


            <!--設定"地點"外觀格式-->
            <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" Margin="0,0,0,-10" >
              <Image Source="location.png" />
              <Label Text="地點" TextColor="#3D474A" FontSize="12"/>
		
            </StackLayout>
            <!--顯示地點-->
            <Label Text="{Binding Location}" x:Name="Restaurant_location1" TextColor="#3D37ED" FontSize="16"/>

            <!--設定"描述"外觀格式-->
            <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" Margin="0,0,0,-10">
              <Image Source="note.png" />
              <Label Text="優惠" TextColor="#3D474A" FontSize="12"/>
            </StackLayout>
            <!--顯示描述-->
            <Label Text="{Binding Description}" x:Name="Restaurant_note1" TextColor="#3D37ED" FontSize="16"/>
					<Button Text="兌換優惠１"
            TextColor="#EA25"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            FontSize="13"
            BorderWidth="0"
            BorderColor="White"
            FontAttributes="None"
            BackgroundColor="Aqua"
            BorderRadius="20"
            WidthRequest="200"
            HeightRequest="35"
            x:Name="coupon1"
                />
               </StackLayout>
       </ScrollView>
   </StackLayout>
		 <StackLayout Orientation="Vertical" Padding="20,170,0,0" x:Name="ResultData1">
